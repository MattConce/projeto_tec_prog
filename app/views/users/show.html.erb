<%= provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user-info">
      <h1>
        <%= gravatar_for @user %>
        <p><%= link_to 'Edit', edit_user_path(@user) %></p>
        <%= image_tag(@user.image.url, alt: 'Image') if @user.image? %>
        <%= @user.name %>
      </h1>
        <% if @user.register %>           
          Idade: <%= @user.age %>
          <%= render @registers %>
        <%else%>
          <%=link_to "Cadastro", register_path %>
        <%end%>
      </p>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.posts.any? %>
      <h3>Depoimentos (<%= @user.posts.count %>)</h3>
      <ol class="posts">
        <%= render @posts %>
      </ol>
      <%= will_paginate @posts %>
    <% end %>
  </div>
</div>
