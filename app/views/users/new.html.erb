<% provide(:title, 'Sing up') %>
<h1>Novo Usuário</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label "Nome" %>
      <%= f.text_field :name %>

      <%= f.label "Idade" %>
      <%= f.number_field :age %>
      <br>
      <%= f.label "Email" %>
      <%= f.email_field :email %>
      <br>
      <%= f.label "Senha" %>
      <%= f.password_field :password %>
      <br>
      <%= f.label "Confimação" %>
      <%= f.password_field :password_confirmation %>
      <br>
      <%= f.submit "Criar minha conta", class: "btn btn-primary" %>

    <% end %>
  </div>
</div>
